---
import HeadingJsConf from '@/components/molecules/HeadingJsConf.astro';
import ListScrollX from '@/components/molecules/ListScrollX.astro';
import Button from '@atoms/Button.astro';
import Section from '@components/Section.astro';
import Layout from '@layouts/Layout.astro';
import HeadingSection from '@molecules/HeadSection.astro';

const categories = [
  {
    id: 'atomos',
    title: 'Átomos',
    description:
      'Bloques fundamentales de la interfaz, diseñados para reutilización y consistencia en el sistema de diseño.',
    components: [
      'AnchorSample',
      'AnchorWrapper',
      'Background',
      'Badge',
      'Button',
      'Glass',
      'HeadingBgImage',
      'HeadingPrincipal',
      'HeadingSmall',
      'LiteYoutube',
      'Paragraph',
      'Picture',
      'Small',
      'SpanColorized',
      'Svg',
      'YtImg',
    ],
  },
  {
    id: 'moleculas',
    title: 'Moléculas',
    description:
      'Grupos simples de elementos UI que funcionan juntos como una unidad, formando componentes más complejos.',
    components: [
      'Badges',
      'Card',
      'Copyright',
      'Gallery',
      'HeadSection',
      'HeadingJsConf',
      'ListScrollX',
      'LiteYoutubePlus',
    ],
  },
  {
    id: 'organismos',
    title: 'Organismos',
    description:
      'Componentes UI complejos compuestos por múltiples moléculas y/o átomos, representando secciones distintas de la interfaz.',
    components: [
      'Hero',
      'Hero404',
      'ListCards',
      'Navigation',
      'SectionAboutJsConf',
      'SectionBackground',
      'SectionCommunityFriend',
      'SectionGallery',
      'SectionPolicyPrivacy',
      'SectionSponsors',
      'SectionVideo',
    ],
  },
  {
    id: 'plantillas',
    title: 'Plantillas',
    description:
      'Componentes a nivel de página que definen la estructura y el diseño de una vista o página específica.',
    components: ['404', 'Home'],
  },
];
---

<Layout>
  <nav
    class="sticky top-4 w-full max-w-6xl mx-auto px-4 py-2 bg-transparent border-[.5px] rounded-3xl border-primary/25 mt-2 bg-gradient-to-tl from-white/5 to-white/10 backdrop-blur-md flex justify-between z-50"
  >
    <HeadingJsConf
      aria-hidden="true"
      class="text-2xl md:text-3xl flex items-end [&_span:first-child]:text-4xl [&_span:nth-child(2)]:text-4xl [&_span:last-child]:text-slate-500 [&_span:last-child]:leading-none [&_span:last-child]:ml-2 [&_span:last-child]:translate-y-.5 [&_span:last-child]:text-4xl [&_span:last-child_svg]:size-3 [&_span:last-child_svg]:-top-px [&_span:last-child_svg]:right-1/3 py-2 tracking-tight self-center [&~div>#categories-ui_a]:text-stone-100"
    />
    <ListScrollX
      id="categories-ui"
      items={[
        { text: 'Átomos', href: '#atomos' },
        { text: 'Moléculas', href: '#moleculas' },
        { text: 'Organismos', href: '#organismos' },
        { text: 'Plantillas', href: '#plantillas' },
      ]}
    />
  </nav>
  <main class="p-8">
    <HeadingSection
      class="pb-4 z-20 relative [&>h3]:border-double [&>h3]:border-b-2 [&>h3]:border-emerald-400/90 font-bold shadow-lg [&>h3]:to-emerald-600/80 [&>h3]:via-emerald-300/50 [&>h3]:from-teal-400/90 [&>h3]:w-fit [&>h3]:mx-auto"
      title="UI Componentes"
      paragraph=""
    />
    {
      categories.map((category) => (
        <Section class="mb-8" id={category.id}>
          <HeadingSection
            class="pb-4 z-20 relative"
            title={category.title}
            paragraph={category.description}
          />
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            {category.components.map((component) => (
              <Button
                type="anchor"
                href="#"
                text={component}
                class="bg-primary text-white hover:bg-primary/80"
              />
            ))}
          </div>
        </Section>
      ))
    }
  </main>
</Layout>
