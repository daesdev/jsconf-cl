---
interface Props {
    type: 'button' | 'anchor';
    href?: string;
    text: string;
    class?: string;
}
const {
    type,
    href = '#',
    text,
    class: className = 'bg-black/15 hover:bg-black/80 text-white hover:text-white/90',
} = Astro.props;
---

{
    type === 'anchor' ? (
        <a
            href={href}
            class={`transition-all duration-750 min-h-[42px] flex flex-col sm:flex-row items-center py-2 px-3 rounded-2xl text-sm text-center md:text-lg  font-semibold text-shadow-2xs border-[.5px] border-transparent hover:border-white/20 ${className}`}
        >
            {text}
            <slot name="text-highlighted" />
        </a>
    ) : (
        <button
            class={`transition-all duration-750 min-h-[42px] flex items-center py-2 px-3 rounded-2xl text-sm text-center md:text-lg  font-semibold text-shadow-2xs border-[.5px] border-transparent hover:border-white/20 ${className}`}
        >
            {text}
        </button>
    )
}
