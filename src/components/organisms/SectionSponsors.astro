---
import Background from '@atoms/Background.astro';
import HeadingPrincipal from '@atoms/HeadingPrincipal.astro';
import Section from '@components/Section.astro';
import ListCards from '@organisms/ListCards.astro';
const sponsors = [
    {
        href: 'https://google.com',
        src: 'Google',
        alt: 'Google',
        title: 'Google',
    },
    {
        href: 'https://algolia.com',
        src: 'Algolia',
        alt: 'Algolia',
        title: 'Algolia',
    },
    {
        href: 'https://figma.com',
        src: 'Figma',
        alt: 'Figma',
        title: 'Figma',
    },
    {
        href: 'https://midudev.com',
        src: 'Midudev',
        alt: 'Midudev',
        title: 'Midudev',
    },
    {
        href: 'https://platzi.com',
        src: 'Platzi',
        alt: 'Platzi',
        title: 'Platzi',
    },
    {
        href: 'https://Rspack.com',
        src: 'Rspack',
        alt: 'Rspack',
        title: 'Rspack',
    },
];
---

<Section
    class="[&]:px-10 py-10 relative mt-4 [&]:max-w-[1200px] border-[.5px] border-secondary/55 rounded-xl overflow-hidden"
>
    <Background
        class="absolute inset-0 -z-[1] w-full h-full bg-gradient-to-bl from-secondary/5 via-cyan-800/15 to-secondary/5 min-h-auto"
    />
    <HeadingPrincipal
        class="leading-tight text-4xl text-white w-full mb-10 md:mb-14"
    >
        Sponsors
    </HeadingPrincipal>
    <ListCards items={sponsors} />
</Section>
