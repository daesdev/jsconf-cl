---
import Background from '@atoms/Background.astro';
const anchorsCta = [
    {
        href: 'javascript:void(0)',
        text: 'Postula tu charla',
    },
    {
        href: 'javascript:void(0)',
        text: 'Hazte Sponsor',
    },
    {
        href: 'https://gallery.jsconf.cl/',
        text: 'Ver antiguas ediciones',
    },
];
---

<footer class="relative">
    <Background />
    <div class="flex justify-center py-4">
        <ul
            id="anchors-cta"
            class="inline-flex gap-1 items-center justify-center bg-amber-50/10 backdrop-blur-3xl mx-auto rounded-2xl overflow-hidden"
        >
            {
                anchorsCta.map((anchor) => (
                    <li class="transition-all duration-750 min-h-[42px] flex items-center py-2 px-3 rounded-2xl hover:bg-black/80 border-[.5px] border-transparent hover:border-white/20">
                        <a
                            href={anchor.href}
                            class="text-sm text-center md:text-lg text-white font-semibold hover:text-white/90 text-shadow-2xs"
                        >
                            {anchor.text}
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</footer>
