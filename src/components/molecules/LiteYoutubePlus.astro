---
import HeadingBgImage from '@atoms/HeadingBgImage.astro';
import LiteYoutube from '@atoms/LiteYoutube.astro';
import YtImg from '@atoms/YtImg.astro';
interface Props {
    videoId: string;
    ytimg?: boolean;
    title?: string;
    playLabel?: string;
}
const { videoId, ytimg = true, title, playLabel } = Astro.props;
---

<div class="grid place-content-center">
    <div
        class="relative w-dvw max-w-[1100px] mx-auto aspect-video grid grid-cols-1"
    >
        {
            ytimg && (
                <>
                    <HeadingBgImage
                        image={`https://i.ytimg.com/vi/${videoId}/maxresdefault.jpg`}
                        id="ytimg-text"
                        class="hidden [&.hidden~picture]:opacity-100 self-start justify-self-center leading-tight col-start-1 row-start-1 transition-all duration-500"
                        title="JsConf CL"
                    />
                    <YtImg
                        videoId={videoId}
                        title={title}
                        class="block -z-[1] w-full h-full col-start-1 row-start-1"
                    />
                </>
            )
        }
        {
            videoId && (
                <LiteYoutube
                    videoId={videoId}
                    class="rounded-lg z-30 w-full h-full [&]:border-primary/80 col-start-1 row-start-1"
                    style="--color-accent: var(--color-primary); background-image: none; background-color: transparent;"
                    tabindex="0"
                    aria-label="button"
                >
                    <a
                        href={`https://youtube.com/watch?v=${videoId}`}
                        class="lty-playbtn"
                        title={title}
                        role="button"
                        tabindex="0"
                    >
                        <span class="lyt-visually-hidden">{title}</span>
                    </a>
                </LiteYoutube>
            )
        }
    </div>
</div>
