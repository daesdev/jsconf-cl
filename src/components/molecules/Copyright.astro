---
import AnchorSample from '@atoms/AnchorSample.astro';
import Small from '@atoms/Small.astro';
interface Props {
    link: {
        href: string;
        text: string;
    };
    text?: string;
    linkClass?: string;
}
const { link, text, linkClass } = Astro.props;
const year = new Date().getFullYear();
const textSmall = text || `@${year} desarrollado con cari√±o por`;
---

<div class="text-gray-400 w-full text-center block">
    <Small text={textSmall} />
    <AnchorSample href={link.href} text={link.text} class={linkClass} />
</div>
